<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    >

    <Button android:id="@+id/main_button_sentences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_button_open_sentences"
        android:onClick="OpenSentences" />


    <Button android:id="@+id/main_button_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_button_open_pass"
        android:onClick="OpenPass" />
</LinearLayout>
